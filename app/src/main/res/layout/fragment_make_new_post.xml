<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.schedule.MakeNewPostFragment"
        android:background="@drawable/br_gray_boarder"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:showDividers="middle"
        android:divider="@drawable/view_separator">

        <LinearLayout
            android:id="@+id/ll_upload_list"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_upload_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_camera"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진추가"
                    android:textSize="10sp"/>
            </LinearLayout>
            <ScrollView
                android:id="@+id/sv_upload_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_hash_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="태그입력" />

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="위치" />
        <EditText
            android:id="@+id/et_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="내용을 입력하세요" />
        <TextView
            android:id="@+id/tv_upload_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="올리기"
            android:textSize="16sp"
            android:padding="16dp"
            android:gravity="center"/>
    </LinearLayout>
</layout>